<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/index.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
  </head>
  <body>
    <div class="point" value=<%= point %>>  </div>
    <nav class="navbar navbar-expand-lg navbar-light my-navbar">
      <div class="container-fluid">
        <div class="my-logo">
          <img src="images/logo.svg" />
        </div>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNavAltMarkup"
          aria-controls="navbarNavAltMarkup"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active" aria-current="page" href="/user">Home</a>
            <a class="nav-link" href="#">Apply to a loan</a>
            <a class="nav-link" href="/whatIsState">What is my state</a>
          </div>
        </div>
        <button type="submit" class="btn btn-outline-secondary">
          <a href="/log-in"> Sign out </a>
        </button>
      </div>
    </nav>
    <canvas id="myChart" style="width:100%;max-width:600px"></canvas>

    <script>
      var xValues = ["My points", "The points that needed"];
      var point = parseInt(document.querySelector('.point').getAttribute('value'));
      var yValues = [point, 45];
      var barColors = ["#b91d47", "#00aba9"];

      new Chart("myChart", {
        type: "pie",
        data: {
          labels: xValues,
          datasets: [
            {
              backgroundColor: barColors,
              data: yValues,
            },
          ],
        },
        options: {
          title: {
            display: true,
            text: "Loan Points",
          },
        },
      });
    </script>
  </body>
</html>
